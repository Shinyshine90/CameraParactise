<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
  xmlns:app="http://schemas.android.com/apk/res-auto"
  xmlns:tools="http://schemas.android.com/tools"
  android:layout_width="match_parent"
  android:layout_height="match_parent"
  tools:context=".MainActivity">

  <cn.shawn.camerapractise.camera2.CameraPreviewSurface
    android:id="@+id/surface_view"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_constraintLeft_toLeftOf="parent"
    app:layout_constraintTop_toTopOf="parent" />

  <android.opengl.GLSurfaceView
    android:id="@+id/surface_hide"
    android:layout_width="1px"
    android:layout_height="1px"/>

  <Button
    android:id="@+id/btn_normal"
    android:layout_width="60dp"
    android:layout_height="wrap_content"
    android:text="normal"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintLeft_toLeftOf="parent"/>

  <Button
    android:id="@+id/btn_left"
    android:layout_width="60dp"
    android:layout_height="wrap_content"
    android:text="left"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintLeft_toRightOf="@id/btn_normal"/>

  <Button
    android:id="@+id/btn_right"
    android:layout_width="60dp"
    android:layout_height="wrap_content"
    android:text="right"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintLeft_toRightOf="@id/btn_left"/>

  <Button
    android:id="@+id/btn_top"
    android:layout_width="60dp"
    android:layout_height="wrap_content"
    android:text="top"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintLeft_toRightOf="@id/btn_right"/>

  <Button
    android:id="@+id/btn_bottom"
    android:layout_width="60dp"
    android:layout_height="wrap_content"
    android:text="bottom"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintLeft_toRightOf="@id/btn_top"/>

  <Button
    android:id="@+id/btn_h"
    android:layout_width="60dp"
    android:layout_height="wrap_content"
    android:text="H"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintLeft_toRightOf="@id/btn_bottom"/>

  <ImageView
    android:id="@+id/iv_picture"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintRight_toRightOf="parent"
    android:layout_width="200dp"
    android:layout_height="100dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>